                                            <input type="submit" value="Create" style="margin-left: 20em" class="btn btn-success" />
                                        </div>  
                                    </div>
                                </div>        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}



    <script>
        $(document).ready(function () {
      
            $("#vehicule").hide();
            $("#immobilier").hide();
            $("#categorie").change(function () {
                var x = $("#categorie").val();
                if (x == 1)
                {
                    $("#immobilier").hide();
                    $("#vehicule").show();
                } else if (x == 2)
                {
                    {
                        $("#immobilier").show();
                        $("#vehicule").hide();
                    }

                } else
                {
                    $("#vehicule").hide();
                    $("#immobilier").hide();
                }
            });

        });
    </script>

