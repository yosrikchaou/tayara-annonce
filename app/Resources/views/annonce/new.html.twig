{% extends 'base.html.twig' %}

{% block body %}
    <script src="{{asset('assets/js/jquery.min.js')}}"></script>
    <h1>Annonce creation</h1>
    {{ form_start(form) }}
    <div id="content">
        <div id="content-header">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget-box">
