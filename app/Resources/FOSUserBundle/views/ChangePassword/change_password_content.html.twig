{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<div class="form-horizontal form-label-left">   
<div class="form-group">
        {{ form_label(form.current_password, "Mot de passe* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.current_password) }}
        </div>
    </div>
        <div class="form-group">
        {{ form_label(form.plainPassword.first, "nouveau* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, "Confirmer* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>
    <div>
        <input type="submit" value="Changer" class="btn btn-success"/>
    </div>
        </div>
{{ form_end(form) }}
