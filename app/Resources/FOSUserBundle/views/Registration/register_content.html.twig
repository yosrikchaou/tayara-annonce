{% trans_default_domain 'FOSUserBundle' %}



<div class="form-horizontal form-label-left">

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    <div class="form-group">
        {{ form_label(form.email, "Email* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.email, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.username, "Nom* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.username, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.username) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.first, "Mot de passe* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, "Confirmer* ", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.roles, "Choisir*", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.roles, {'label_attr': {'class': 'form-control col-md-12 col-xs-12'}}) }}
            {{ form_errors(form.roles) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-success"/>
        </div>
    </div>
    {{ form_end(form) }}

</div>
